@model List<Microsoft.AspNetCore.Authentication.AuthenticationScheme>

@{
    ViewData["Title"] = "Register";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="row">
    <h2>Register</h2>
    <div class="card">
        @if (Model.Count > 0)
        {
            <form asp-action="GoogleLogin" asp-controller="Auth" method="post">
                <div>
                    @foreach (var provider in Model)
                    {
                        <button class="btn btn-primary" type="submit" name="provider" value="@provider.Name">@provider.DisplayName</button>
                    }
                </div>
            </form>
        }
    </div>
</div>

